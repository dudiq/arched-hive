{
  "name": "@repo/ui-kit",
  "version": "0.0.2",
  "private": true,
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "src/index.ts",
  "exports": {
    "./tailwind.base.css": "./dist/tailwind.base.css",
    "./default.tailwind.config": "./default.tailwind.config.cjs",
    ".": "./dist/index.js"
  },
  "scripts": {
    "prepare:css": "node prepare-css.js",
    "types": "tsc",
    "storybook": "npm run prepare:css && pnpm dev",
    "check-types": "tsc",
    "clean": "rimraf ./dist ./turbo",
    "clean:node_modules": "rimraf ./node_modules",
    "update-package": "node update-package.js",
    "build": "npm run prepare:css && tsup",
    "dev": "npm run prepare:css && tsup --watch",
    "lint": "TIMING=1 eslint src --fix"
  },
  "devDependencies": {
    "@repo/unit-test": "workspace:*",
    "@repo/config-typescript": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "@storybook/react": "^7.6.15",
    "@types/react": "~18.2.0",
    "@types/react-dom": "~18.2.0",
    "@types/react-transition-group": "^4.4.10",
    "copyfiles": "^2.4.1",
    "rimraf": "^5.0.5"
  },
  "dependencies": {
    "clsx": "^2.0.0",
    "flowbite-typography": "^1.0.3",
    "react": "~18.2.0",
    "react-dom": "~18.2.0",
    "react-transition-group": "^4.4.5"
  }
