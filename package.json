{
  "name": "arched-hive",
  "appName": "Coinote",
  "version": "6.0.0",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "packages/*",
    "configs/*",
    "apps/*"
  ],
  "scripts": {
    "clean:reset:all": "git clean -fdx -e .vercel .",
    "clean": "turbo run clean",
    "clean:node_modules": "turbo run clean:node_modules && rimraf ./node_modules",
    "check-types": "turbo run check-types",
    "build": "turbo run build check-types",
    "build:coinote": "turbo run build check-types --filter=web... --color",
    "dev": "turbo run dev --concurrency=25 --filter=web... --color",
    "lint": "turbo run lint",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "turbo run test:unit",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install",
    "lint-staged": "lint-staged",
    "storybook": "turbo run storybook"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@types/node": "~20.11.25",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.1",
    "ts-node": "10.9.2",
    "tsup": "8.0.2",
    "turbo": "^1.12.5",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
